@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist's Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.StylistName): @Html.DisplayFor(model => model.StylistName)<h3>
    <h3>@Html.DisplayNameFor(model => model.StylistDetails): @Html.DisplayFor(model => model.StylistDetails)</h3>

    @if (@Model.Clients.Count == 0)
    {
      <h3>No clients for this stylist @Model.StylistName have been added yet!</h3>
    }

    <ul>
      @foreach (Client client in Model.Clients)
      {
        <li>@Html.ActionLink($"{client.ClientName}", "Details", "Restaurants", new { id = client.ClientId })
        </li>
      }
    </ul>

    <p>@Html.ActionLink("Add client", "Create", "Clients")</p>
    <p>@Html.ActionLink("Edit stylist", "Edit", new { id = Model.StylistId })</p>
    <p>@Html.ActionLink("Delete stylist", "Delete", new { id = Model.StylistId })</p>
    <p>@Html.ActionLink("Back to list", "Index")</p>